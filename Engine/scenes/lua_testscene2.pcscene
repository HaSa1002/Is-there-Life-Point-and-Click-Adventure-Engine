	{{"l1", -1000, -1000, 1100, 2000}, {"l2", 100, 0, 100, 2000}, {"l3", 200, 0, 100, 2000}, {"l3", 300, 0, 100, 2000}, {"m", 400, 0, 100, 2000}, {"r3", 500, 0, 100, 2000}, {"r2", 600, 0, 100, 2000}, {"r1", 700, 0, 10000, 2000}}, 
	{{100, 100, "point1"}, {800, 300, "point2"}}}

	obj = scene["objects"]["ServerRack" .. i];
	 function obj.onHover()
	 	setSubtitle("Ein Server mit der Nummer " .. i)
	 end
end


